      .goods__data-wrap.j_equal-height
        a.goods__title(href='#' title=contentObj.title)=contentObj.title
        .goods__info-line
          span.goods__info=contentObj.info
          |
          |
          span.goods__average-mark
            span.mark 4.2
            |
            |
            span.votes (12)
        if fullMode
          .goods__descr=contentObj.desrc
      .goods__extended-block
        .goods__price-block
          span.goods__price_old=contentObj.oldPrice+' ₽'
          |
          |
          span.goods__price=contentObj.price+' ₽'
          |
          |
          br
          +productAmount('goods__amount')
        .goods__hover-block
          a.goods__add-cart(href='#', data-text='Добавить в корзину') 
