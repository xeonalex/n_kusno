mixin aboutMenu(menu)
  if (Array.isArray(menu) && menu[0] == 'big')
    ul.sidebar__menu
      -var links = [];
      each item, index in ['Расподажа','Ингридиенты',['Оформление',['Посыпки, шарики','Украшения','Десерты','Крем и топпинги']],'Шоколад и какао','Мастика','Кулинарые добавки','Ароматизаторы','Айсинг','Красители','Специи']
        li.sidebar__menu-item(class= Array.isArray(item[1]) ? 'sidebar__menu-item_extended' : '')
          a.sidebar__menu-link( href= links[index] ? links[index] : '#' class= index == 0 ? 'active': '')= Array.isArray(item[1]) ? item[0] : item
          if Array.isArray(item[1])
            ul.sidebar__sub-menu
              each link in item[1]
                li.sidebar__menu-item
                  a.sidebar__menu-link( href='#')=link
  if (Array.isArray(menu) && menu[0] == 'mobile')
    ul.sidebar__menu
      -var links = [];
      each item, index in [['Лавка кулинара',['Шоколад и какао','Мастика','Кулинарые добавки','Ароматизаторы','Айсинг','Красители','Специи']],'Кондитерский инвентарь',['Товары творчества',['Посыпки, шарики','Украшения','Десерты','Крем и топпинги']],'Поиск по магазину']
        li.sidebar__menu-item(class= Array.isArray(item[1]) ? 'sidebar__menu-item_extended' : '')
          a.sidebar__menu-link( href= links[index] ? links[index] : '#')= Array.isArray(item[1]) ? item[0] : item
          if Array.isArray(item[1])
            ul.sidebar__sub-menu
              li.sidebar__menu-item
                a.sidebar__menu-link.mobile-menu__go-back(href='#')
                  //- +icon('')
                  span=item[0]
              each link in item[1]
                li.sidebar__menu-item
                  a.sidebar__menu-link( href='#')=link
  else if (Array.isArray(menu) && menu[0] == 'personal')
    ul.sidebar__menu
      -var links = ['personal.html','orders.html','order-history.html','#']
      each item, index in ['Личный кабинет','Ваши заказы','История заказов','Любимые товары']
        li.sidebar__menu-item
          a.sidebar__menu-link( href= links[index] ? links[index] : '#' class= index == menu[1] ? 'active': '')=item
  else
    ul.sidebar__menu
      -var links = ['about.html','news.html','#','reviews.html','store-notices.html','']
      each item, index in ['О компании','Новости','Блог','Отзывы','Уведомления магазина','Пожелания <br> по ассортименту']
        li.sidebar__menu-item
          a.sidebar__menu-link( href= links[index] ? links[index] : '#' class= index == menu ? 'active': '')!=item
mixin productAmount(className)
  label.amount-select__block.j_cart-item-amount(class = className)
    span.decrease
      +icon('i_minus')
    input(type='text' placeholder='1' readonly='true').j_cart-item-amount_input
    span.increase
      +icon('i_plus')
mixin goodsBlock(contentObj,fullMode)
  if !contentObj 
    -var contentObj = {img: 'algamar_300x190',imgLineMode: 'algamar_280x172', status: ['Акция'], title: 'Агар-агар Algamar Algas Marinas S.A', info: 'США, 283 гр', 			desrc: 'Эти драже идельно подойдут для больших и малых торжеств. Арахис в глазури можно есть как самостоятельное блюдо, так и украшать...', 			oldPrice: '479', 			price: '379'		}
  .goods__item
    .goods__item-inner
